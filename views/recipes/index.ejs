<%- include('../partials/header') %>

<h1>Recipe List</h1>
<table id="list">
    <thead>
        <tr>
            <th>Recipe:</th>
            <th>Description:</th>
            <th>Difficulty Level:</th>
            <th>Ingredients:</th>
        </tr>
    </thead>
    <tbody>
        <% recipes.forEach(function(r) { %>
        <tr>
            <td><%= r.title %></td>
            <td><%= r.image %></td>
            <td><%= r.description %></td>
            <td><%= r.difficultyLevel %></td>
            <td><%= r.servings %></td>
            <td><%= r.ingredientList %></td>
            <td><%= r.directions %></td>
        </tr>

        <% }); %>
    </tbody>
</table>



<%- include('../partials/footer') %>