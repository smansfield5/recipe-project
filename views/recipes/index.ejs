<%- include('../partials/header') %>
<br>
    <h1 class="new">Recipe Index</h1>
    <table id="list"><br>
        <tbody>
            <% recipes.forEach(function(r) { %>
                <tr>
                    <td>
                        <img class="idxImg" src="<%= r.recImg %>">
                        
                    </td>
                    <td id="idxDes">
                         <%= r.description %>
                    </td>
                    <td><a href="/recipes/<%= r.id %>">Details</a></td>
                    <td colspan="3"></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

 <%- include('../partials/footer') %>