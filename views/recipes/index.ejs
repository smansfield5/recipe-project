<%- include('../partials/header') %>

    <h1>Recipe List</h1>
    <table id="list">
        <thead>
            <tr>
                <th></th>
                <th>Description:</th>
            </tr>
        </thead>
        <tbody>
            <% recipes.forEach(function(r) { %>
                <tr>
                    <td>
                        <img class="idxImg" src="<%= r.recImg %>">
                        
                    </td>
                    <td>
                         <%= r.description %>
                    </td>
                    <td><a href="/recipes/<%= r.id %>">Details</a></td>
                </tr>

                <% }); %>
                
        </tbody>
    </table>



    <%- include('../partials/footer') %>