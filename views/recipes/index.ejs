<%- include('../partials/header') %>
<br>
    <h1 class="new">Recipe Index</h1>
    <table id="list">
        <thead>
            <tr>
                <th></th>
                <th class="new">Description:</th>
            </tr>
        </thead>
        <tbody>
            <% recipes.forEach(function(r) { %>
                <tr>
                    <td>
                        <img class="idxImg" src="<%= r.recImg %>">
                        
                    </td>
                    <td id="idxDes">
                         <%= r.description %>
                    </td>
                    <td><a href="/recipes/<%= r.id %>">Details</a></td>
                    <td>
                        <% if (user && user._id.equals(r.user)) { %>
                            <form action="/recipes/<%= r._id %>?_method=DELETE" method="POST">
                                <button type="submit"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                            <% } %>
                    </td>
                    <!-- <td>
                        <a href="/recipes/<%= r.id %>/update">Update Recipe</a>
                    </td> -->
                    <td colspan="3"></td>
                </tr>

                <% }); %>
                
        </tbody>
    </table>



    <%- include('../partials/footer') %>